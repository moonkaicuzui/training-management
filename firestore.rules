rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 인증된 사용자만 접근 가능
    function isAuthenticated() {
      return request.auth != null;
    }

    // 관리자 확인 (users 컬렉션의 role 필드 기반)
    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // 허용된 이메일 도메인 확인
    function hasAllowedDomain() {
      let email = request.auth.token.email;
      return email.matches('.*@hwaseung\\.com$') ||
             email.matches('.*@hwaseungvina\\.com$') ||
             email.matches('.*@gmail\\.com$');
    }

    // 직원 정보
    match /employees/{employeeId} {
      allow read: if isAuthenticated() && hasAllowedDomain();
      allow create, update: if isAuthenticated() && hasAllowedDomain();
      allow delete: if isAdmin();
    }

    // 교육 프로그램
    match /trainingPrograms/{programId} {
      allow read: if isAuthenticated() && hasAllowedDomain();
      allow create, update: if isAuthenticated() && hasAllowedDomain();
      allow delete: if isAdmin();
    }

    // 교육 세션
    match /trainingSessions/{sessionId} {
      allow read: if isAuthenticated() && hasAllowedDomain();
      allow create, update: if isAuthenticated() && hasAllowedDomain();
      allow delete: if isAdmin();
    }

    // 교육 결과 - 삭제 금지 (감사 추적)
    match /trainingResults/{resultId} {
      allow read: if isAuthenticated() && hasAllowedDomain();
      allow create, update: if isAuthenticated() && hasAllowedDomain();
      allow delete: if false;  // 삭제 불가 - 감사 추적 필수
    }

    // 프로그램 변경 로그
    match /programChangeLogs/{logId} {
      allow read: if isAuthenticated() && hasAllowedDomain();
      allow create: if isAuthenticated() && hasAllowedDomain();
      allow update, delete: if false;  // 로그는 수정/삭제 불가
    }

    // 결과 수정 로그
    match /resultEditLogs/{logId} {
      allow read: if isAuthenticated() && hasAllowedDomain();
      allow create: if isAuthenticated() && hasAllowedDomain();
      allow update, delete: if false;  // 로그는 수정/삭제 불가
    }

    // 사용자 역할 정보
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAdmin();
      allow delete: if false;
    }

    // New TQC 관련 컬렉션
    match /newTqcTrainees/{traineeId} {
      allow read: if isAuthenticated() && hasAllowedDomain();
      allow create, update: if isAuthenticated() && hasAllowedDomain();
      allow delete: if isAdmin();
    }

    match /newTqcMeetings/{meetingId} {
      allow read: if isAuthenticated() && hasAllowedDomain();
      allow create, update: if isAuthenticated() && hasAllowedDomain();
      allow delete: if isAdmin();
    }

    match /newTqcResignations/{resignationId} {
      allow read: if isAuthenticated() && hasAllowedDomain();
      allow create, update: if isAuthenticated() && hasAllowedDomain();
      allow delete: if false;  // 퇴사 기록은 삭제 불가
    }
  }
}
